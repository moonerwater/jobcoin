<script type="text/javascript">

	$(".goapply").on('tap',function(){

		var userstat = "N";

		if(userstat == "N"){
			var btnArray = ['取消', '马上申请'];
			mui.confirm('申请成为夺宝达人并经过金职岛官方审核后才可发起夺宝赚取6%丰富奖励哦', '您需要申请成为夺宝达人', btnArray, function(e) {
				if (e.index == 1) {
					window.location.href = "/db/talentrules";
				} else {
					
				}
			})
		} 
		if(userstat == "Y"){
			var btnArray = ['取消', '去看看'];
			mui.confirm('『我的夺宝』中可以查看到你发起的夺宝进度哦', '恭喜你成功发起夺宝！', btnArray, function(e) {
				if (e.index == 1) {
					window.location.href = "/db/tprogress";
